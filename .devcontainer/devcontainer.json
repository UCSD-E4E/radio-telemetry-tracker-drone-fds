{
    "name": "Radio Telemetry Tracker Drone FDS Dev Container",
    "dockerComposeFile": [
        "../docker-compose.dev.yml"
    ],
    "service": "rtt-drone-fds-dev",
    "workspaceFolder": "/workspace/radio-telemetry-tracker-drone-fds",
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff"
            ],
            "settings": {
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    }
                }
            }
        }
    }
}